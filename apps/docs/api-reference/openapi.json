{
  "openapi": "3.1.0",
  "info": {
    "title": "InBrowser API",
    "description": "High-performance file conversion API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://inbrowser-api.vercel.app"
    }
  ],
  "paths": {
    "/api/convert": {
      "post": {
        "summary": "Convert File",
        "description": "Convert media and document files between different formats",
        "operationId": "convertFile",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to be converted"
                  },
                  "format": {
                    "type": "string",
                    "description": "The target output format extension"
                  }
                },
                "required": ["file", "format"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful conversion",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "filename": { "type": "string" },
                    "contentType": { "type": "string" },
                    "data": { "type": "string" },
                    "size": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/health": {
      "get": {
        "summary": "Health Check",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": { "type": "string", "example": "OK" }
              }
            }
          }
        }
      }
    }
  }
}
